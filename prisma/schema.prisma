// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model TrueOrFalseChallenge {
  id        String                @id @default(cuid())
  date      DateTime              @unique
  questions TrueOrFalseQuestion[]
}

model TrueOrFalseQuestion {
  id                     String               @id @default(cuid())
  trueOrFalseChallengeId String
  trueOrFalseChallenge   TrueOrFalseChallenge @relation(fields: [trueOrFalseChallengeId], references: [id])
  imageUrl               String
  isAiGenerated          Boolean

  @@index([trueOrFalseChallengeId])
}

model SpotOneChallenge {
  id        String            @id @default(cuid())
  date      DateTime          @unique
  questions SpotOneQuestion[]
}

model SpotOneQuestion {
  id                 String           @id @default(cuid())
  spotOneChallengeId String
  spotOneChallenge   SpotOneChallenge @relation(fields: [spotOneChallengeId], references: [id])
  imageUrls          Json
  aiGeneratedIndex   Int

  @@index([spotOneChallengeId])
}

model UserScore {
  id        String   @id @default(cuid())
  userId    String
  score     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
